{
  "version": 2,
  "builds": [
    { "src": "api/razorpay/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "functions": {
    "api/razorpay/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/razorpay/(.*)", "dest": "/api/razorpay/$1.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
