{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": ".",
  "functions": {
    "api/razorpay/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/razorpay/(.*)", "dest": "/api/razorpay/$1.js" },
    { "src": "^(?!/api/).*$", "dest": "/index.html" }
  ]
}
